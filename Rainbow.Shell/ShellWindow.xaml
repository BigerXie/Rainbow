<controls:MetroWindow x:Class="Rainbow.Shell.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls" 
        xmlns:rbControls="clr-namespace:Rainbow.Controls;assembly=Rainbow.Controls" NonActiveWindowTitleBrush="{StaticResource BlueSolidColorBrush}"
        Title="Rainbow-Framework" GlowBrush="{StaticResource AccentColorBrush}" Icon="/Images/RainbowCloud.png"
        Height="600" Width="800" WindowState="Maximized" WindowTitleBrush="{StaticResource BlueSolidColorBrush}" WindowStartupLocation="CenterScreen">
    <controls:MetroWindow.Resources>

    </controls:MetroWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Name="HeaderGrid" Background="{StaticResource HeaderGradientBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <rbControls:RbIconButton IconPath="{StaticResource Path_Catalog}"></rbControls:RbIconButton>
                <rbControls:RbIconButton IconPath="{StaticResource Path_User}"></rbControls:RbIconButton>
                <rbControls:RbIconButton IconPath="{StaticResource Path_Message}" IconHeight="25"></rbControls:RbIconButton>
                <rbControls:RbIconButton IconPath="{StaticResource Path_Setup}"></rbControls:RbIconButton>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Background="{StaticResource BlueSolidColorBrush}"/>
        <Border Grid.Row="2" Background="{StaticResource SilverSolidColorBrush}" Name="MainPlaceHolder">
            <rbControls:RbPage Icon="/Images/Catalog.png" Title="功能目录">
                <rbControls:RbPage.HeaderContent>
                    <TextBlock Text="Say Hi RainBow!"/>
                </rbControls:RbPage.HeaderContent>
                <rbControls:RbPage.Content>
                    <Grid Background="AliceBlue">
                        
                    </Grid>
                </rbControls:RbPage.Content>
            </rbControls:RbPage>
        </Border>
        <Grid Grid.Row="3" Background="{StaticResource BlueSolidColorBrush}"/>
        <Grid Grid.Row="4" Background="{StaticResource BlackSolidColorBrush4}" Name="FooterGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <rbControls:RbIconButton IconPath="{StaticResource Path_HomePage}" Width="30" Height="30" IconHeight="27" IconWidth="27"></rbControls:RbIconButton>
                <rbControls:RbIconButton IconPath="{StaticResource Path_FullDisplay}" Width="30" Height="30" IconHeight="24" IconWidth="25"></rbControls:RbIconButton>
            </StackPanel>
        </Grid>
    </Grid>
</controls:MetroWindow>
